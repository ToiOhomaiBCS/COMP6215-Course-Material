<Window x:Class="ShowPictures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowPictures"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <ListBox Name="CategorieList" Grid.Column="0" Background="Bisque" SelectionChanged="DisplayImages_Handler"/>

        <StackPanel Grid.Column="2" Width="auto" Background="Bisque">
            <Image Name="SelectedImage" MaxHeight="200" />
            <StackPanel Orientation="Horizontal">
                <Label x:Name="WidthImage" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="HeightImage" FontSize="20"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
